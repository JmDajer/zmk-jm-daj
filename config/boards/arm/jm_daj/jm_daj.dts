/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
    model = "JM-DAJ";
    compatible = "nordic,nrf52840-dk-nrf52840";

    chosen {
        zephyr,code-partition = &code_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,console = &uart0;
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = 
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "col2row";
        
        row-gpios
            = <&gpio1 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // ROW 0 P1.05
            , <&gpio1 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // ROW 1 P1.04
            , <&gpio1 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // ROW 2 P1.03
            , <&gpio1 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // ROW 3 P1.02
            , <&gpio1 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // ROW 4 P1.01
            ;

        col-gpios
            = <&gpio0 27 GPIO_ACTIVE_HIGH>  // COLUMN 0  P0.27
            , <&gpio0 26 GPIO_ACTIVE_HIGH>  // COLUMN 1  P0.26
            , <&gpio0 2 GPIO_ACTIVE_HIGH>   // COLUMN 2  P0.02
            , <&gpio1 15 GPIO_ACTIVE_HIGH>  // COLUMN 3  P1.15
            , <&gpio1 14 GPIO_ACTIVE_HIGH>  // COLUMN 4  P1.14
            , <&gpio1 13 GPIO_ACTIVE_HIGH>  // COLUMN 5  P1.13
            , <&gpio1 12 GPIO_ACTIVE_HIGH>  // COLUMN 6  P1.12
            , <&gpio1 11 GPIO_ACTIVE_HIGH>  // COLUMN 7  P1.11
            , <&gpio1 10 GPIO_ACTIVE_HIGH>  // COLUMN 8  P1.10
            , <&gpio1 8 GPIO_ACTIVE_HIGH>   // COLUMN 9  P1.08
            , <&gpio1 7 GPIO_ACTIVE_HIGH>   // COLUMN 10 P1.07
            , <&gpio1 6 GPIO_ACTIVE_HIGH>   // COLUMN 11 P1.06
            ;
    };
};

&adc {
    status = "okay";
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&uart0 {
    compatible = "nordic,nrf-uart";
    current-speed = <115200>;
    status = "okay";
    tx-pin = <6>;
    rx-pin = <8>;
    rts-pin = <5>;
    cts-pin = <7>;
};

&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        boot_partition: partition@0 {
            label = "mcuboot";
            reg = <0x000000000 0x0000C000>;
        };
        slot0_partition: partition@c000 {
            label = "image-0";
            reg = <0x0000C000 0x00067000>;
        };
        slot1_partition: partition@73000 {
            label = "image-1";
            reg = <0x00073000 0x00067000>;
        };
        scratch_partition: partition@da000 {
            label = "image-scratch";
            reg = <0x000da000 0x0001e000>;
        };
        storage_partition: partition@f8000 {
            label = "storage";
            reg = <0x000f8000 0x00008000>;
        };

        code_partition: partition@0 {
            label = "code_partition";
            reg = <0x0000C000 0x00067000>;
        };
    };
};